<div class="content-grids">
	<h4>Deals of the day</h4>
	<% if user_signed_in? && current_user.admin %>
		<%= link_to "New Products", new_product_path %>
		<% end %>
			<div class="section group">
				<% @products.each do |product| %>
					<div class="col-sm-4 col-md-3">	

					
						<h3><%= link_to product.title, product %></h3>
						 <%=link_to (image_tag product.image, class: 'image'), product %>
							
							<%= form_for(@order_item, remote: true) do |f| %>
							<%= f.hidden_field :product_id, value: product.id %> 
							<div class="price-details">
							<h5><%= product.price %></h5>
							<%= f.text_field :quantity, value: 1, min: 1, class:"form-control" %>						
							
								<%= f.submit "Add to Cart", class: "add-cart" %>
							</div>	
												
							
						<% end %>
							 
			</div>
		
		<% end %>
			</div>
</div>
