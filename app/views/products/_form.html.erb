<div class="row">
  <div class="col-sm-4 col-sm-offset-4">
<%= form_for(@product) do |f| %>
	<div class="form-group">
		<%= f.label :title, "Title" %>
		<%= f.text_field :title, class: 'form-cont' %>
	</div>

	<div class="form-group">
		<%= f.label :price, "Price" %>
		<%= f.number_field :price, class: 'form-control', min: 1 %>
	</div>
	<div class="form-group">
		<%= f.label :image, "Image Link" %>
		<%= f.text_field :image, class: 'form-cont' %>
	</div>
	<div class="form-group">
	<%= f.label :categori %>
	<%= f.select :categori, Product::PROPERTY_OPTIONS %>
	</div>
	<div class="form-group">
		<%= f.label :body, "Body" %>
		<%= f.text_area :body, class: 'form-cont'%>
	</div>

	<%= f.submit "Save", class: 'btn btn-success' %>
<% end %>
</div>
</div>